<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ASSAPP</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/site")
</head>
<body>
    @Scripts.Render("~/bundles/js")
    <div class="navbar navbar-inverse navbar-fixed-top navbar-style">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ASSAPP", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Publicações", "Index", "Publications")</li>
                    <li>@Html.ActionLink("Utilizadores", "Pending", "Users")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - <b>ASSAPP</b> by Diogo Mendes</p>
        </footer>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
