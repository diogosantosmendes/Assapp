@model Project.Models.PublicationIndexViewModel

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-sm-8">
        <h2>Publicações</h2>
    </div>
    <div class="col-sm-4" style="padding-top:3%;padding-bottom:2%;">
        <div class="pull-right">
            @Html.ActionLink("Pendentes", "Unaccepted", null, new { @class = "btn btn-default" })
            @Html.ActionLink("Nova Publicação", "Create", null, new { @class = "btn btn-default" })
        </div>
    </div>
</div>

<div id="myCarousel" class="carousel slide hidden-xs" data-ride="carousel">
    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        @for (var i = 0; i < 5; i++)
        {
            if (Model.List[i].Image != null)
            {
                if (i == 0)
                {
                    <div class="item active">
                        <img src="~/fonts/@Url.Content(Model.List[i].Image)" style="height:400px;" class="img-responsive center-block" />
                        <div class="carousel-caption">
                            <h3>@Html.DisplayFor(modelItem => Model.List[i].Name)</h3>
                        </div>
                    </div>
                }
                else
                {
                    <div class="item text-center">
                        <img src="~/fonts/@Url.Content(Model.List[i].Image)" style="height:400px;" class="img-responsive center-block" />
                        <div class="carousel-caption">
                            <h3>@Html.DisplayFor(modelItem => Model.List[i].Name)</h3>
                        </div>
                    </div>
                }
            }
        }
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<hr />

<div class="row">
    @*PUBLICATION LIST *@
    @foreach (var item in Model.List)
    {
        <div class="col-xs-6 col-sm-4 col-md-3" style="height: 400px;">
            <a href="@Url.Action("Details", new { publicationID=item.ID})">
                <div class="panel panel-primary">
                    <div class="row">
                        <div class="col-xs-6">
                            @* Type *@
                            @if (item.EventFK != null){<label class="h5 text-success"><span class="glyphicon glyphicon-globe"></span></label>}
                            @if (item.PollFK != null){<label class="h5 text-primary"><span class="glyphicon glyphicon-list"></span></label>}
                        </div>
                        <div class="col-xs-6 text-right">
                            @* Date *@
                            <h5><span class="label label-default">@Html.DisplayFor(modelItem => item.CreatedIn)</span></h5>
                        </div>
                    </div>
                    <div>
                        @if (item.Image != null)
                        {
                            @* Title *@
                            <h4 class="text-center"><b>@Html.DisplayFor(modelItem => item.Name)</b></h4>
                            @* Image *@
                            <img src="~/fonts/@Url.Content(item.Image)" class="img-responsive center-block" style="max-height:160px; max-width:240px;"/>
                            @* Text *@
                            if (item.Description != null)
                            {
                                string summary = item.Description.Length > 80 ? item.Description.ToString().Substring(0, 80) + "..." : item.Description.ToString();
                                <p class="text-info h6 text-center">@Html.DisplayFor(modelItem => summary)</p>
                            }
                        }
                        else
                        {
                            @* Title *@
                            <h4 class="text-center"><b>@Html.DisplayFor(modelItem => item.Name)</b></h4>
                            @* Text *@
                            if (item.Description != null)
                            {
                                <p class="text-info h6 text-center" style="max-height: 210px; overflow:hidden">@Html.DisplayFor(modelItem => item.Description)</p>
                            }
                        }
                    </div>
                </div>
            </a>
        </div>

    }
</div>

@* Pagination arrows *@
<div class="row">
    <div class="col-xs-6 text-right">
        @if (Model.HaveLess)
        { <a href="@Url.Action("Index", "Publications", new { i=Model.Index-8 })" class="btn btn-default"><span class="glyphicon glyphicon-chevron-left" aria-label="Left Align" aria-hidden="true"></span></a> }
    </div>
    <div class="col-xs-6">
        @if (Model.HaveMore)
        { <a href="@Url.Action("Index", "Publications", new { i=Model.Index+8 })" class="btn btn-default"><span class="glyphicon glyphicon-chevron-right" aria-label="Right Align" aria-hidden="true"></span></a> }
    </div>
</div>


<div class="modal fade" id="successAlert" role="dialog" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button class="btn btn-danger pull-right" data-dismiss="modal">&times;</button>
                <h3 class="modal-title text-success">Sucesso</h3>
            </div>
            <div class="modal-body">
                <h5 id="successText"></h5>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="errorAlert" role="dialog" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button class="btn btn-danger pull-right" data-dismiss="modal">&times;</button>
                <h3 class="modal-title text-danger">Falha</h3>
            </div>
            <div class="modal-body">
                <h5 id="errorText"></h5>
            </div>
        </div>
    </div>
</div>

